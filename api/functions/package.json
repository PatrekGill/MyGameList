{
  "name": "functions",
  "scripts": {
    "build": "tsc",
	"serve-functions": "npm run build && firebase emulators:start --only functions",
    "serve": "npm run build && firebase emulators:start --import ../Not-Source-Controlled/Firestore-Data",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@graphql-tools/schema": "^8.3.9",
    "apollo-server": "^3.6.7",
    "apollo-server-cloud-functions": "^3.6.7",
    "firebase": "^9.6.11",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.18.0",
    "graphql": "^16.3.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.0",
    "tslint": "^6.1.3",
    "typescript": "^4.6.3"
  },
  "private": true
}
